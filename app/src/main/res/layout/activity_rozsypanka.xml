<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aplikacja_screen.Rozsypanka">


    <Button
        android:id="@+id/button15"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editText8"
        android:layout_below="@+id/editText8"
        android:layout_marginTop="13dp"
        android:background="#eaeae1"
        android:text=""
        android:visibility="invisible" />

    <Button
        android:id="@+id/button16"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/editText8"
        android:layout_below="@+id/editText8"
        android:layout_marginTop="13dp"
        android:background="#eaeae1"
        android:text=""
        android:visibility="invisible" />

    <Button
        android:id="@+id/button18"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/button15"
        android:layout_below="@+id/button15"
        android:layout_marginTop="13dp"
        android:text=""
        android:background="#eaeae1"
        android:visibility="invisible" />

    <Button
        android:id="@+id/button19"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button18"
        android:layout_alignBottom="@+id/button18"
        android:layout_alignStart="@+id/button16"
        android:text=""
        android:background="#eaeae1"
        android:visibility="invisible" />

    <Button
        android:id="@+id/button44"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/button18"
        android:layout_below="@+id/button18"
        android:layout_marginTop="13dp"
        android:text=""
        android:background="#eaeae1"
        android:visibility="invisible" />

    <Button
        android:id="@+id/button45"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button44"
        android:layout_alignBottom="@+id/button44"
        android:layout_alignStart="@+id/button16"
        android:text=""
        android:background="#eaeae1"
        android:visibility="invisible" />

    <Button
        android:id="@+id/button46"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_marginTop="480dp"
        android:layout_marginLeft="120dp"
        android:background="@drawable/zestawy_screen"
        android:text="Dalej"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/editText8"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button47"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Ułóż poprawne zdanie z rozsypanki"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/button47"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:clickable="false"
        android:visibility="invisible"
        android:background="#eaeae1"
        android:text="" />

    <Button
        android:id="@+id/button48"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_marginTop="420dp"
        android:layout_marginLeft="120dp"
        android:background="@drawable/zestawy_screen"
        android:text="Sprawdź" />

    <Button
        android:id="@+id/button49"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/button44"
        android:layout_below="@+id/button44"
        android:visibility="invisible"
        android:background="#eaeae1"
        android:layout_marginTop="13dp" />

    <Button
        android:id="@+id/button50"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/button45"
        android:visibility="invisible"
        android:background="#eaeae1"
        android:layout_alignTop="@+id/button49" />

    <Button
        android:id="@+id/button51"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_marginTop="480dp"
        android:layout_marginLeft="120dp"
        android:background="@drawable/zestawy_screen"
        android:text="Wyczyść" />

    <ProgressBar
        android:id="@+id/progressBar3"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="280dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/button47" />

    <Button
        android:id="@+id/button24"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="540dp"
        android:background="@drawable/zestawy_screen"
        android:visibility="invisible"
        android:text="Pokaż odpowiedź" />

    <TextView
        android:id="@+id/text"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_above="@+id/editText8"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp"
        android:textSize="20dp"
        android:gravity="center"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#37bf15" />


</RelativeLayout>
