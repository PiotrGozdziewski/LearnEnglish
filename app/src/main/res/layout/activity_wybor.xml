<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aplikacja_screen.Wybor">

    <Button
        android:id="@+id/button14"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView20"
        android:layout_marginStart="32dp"
        android:layout_marginTop="120dp"
        android:text="Button" />

    <Button
        android:id="@+id/button16"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_alignStart="@+id/button14"
        android:layout_below="@+id/button14"
        android:layout_marginTop="115dp"
        android:text="Button" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:layout_alignStart="@+id/button14"
        android:layout_marginStart="112dp"
        android:layout_marginTop="81dp"
        android:textSize="15dp"
        android:text="TextView" />

    <Button
        android:id="@+id/button18"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/button14"
        android:layout_marginStart="36dp"
        android:layout_toEndOf="@+id/textView20"
        android:text="Button" />

    <Button
        android:id="@+id/button19"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_alignStart="@+id/button18"
        android:layout_alignTop="@+id/button16"
        android:text="Button" />

    <Button
        android:id="@+id/button15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="22dp"
        android:text="Kolejne słówko" />
</RelativeLayout>
