<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tlo"
    tools:context="com.example.aplikacja_screen.MainActivity">


    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:layout_alignEnd="@+id/cardView"
        android:layout_alignParentTop="true"
        android:layout_marginTop="27dp"
        android:adjustViewBounds="true"
        android:cropToPadding="false"
        android:scaleType="centerCrop"
        android:visibility="visible"
        app:srcCompat="@drawable/logo"
        android:layout_alignStart="@+id/editText6" />

    <EditText
        android:id="@+id/editText6"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:layout_marginTop="246dp"
        android:background="#11000000"
        android:drawableLeft="@drawable/ic_action_name_person"
        android:ems="10"
        android:maxLength="40"
        android:inputType="textPersonName"
        android:hint="Login"
        android:textColor="#000"
        android:contextClickable="true"
        android:textSize="16dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
         />

    <EditText
        android:id="@+id/editText7"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:layout_marginTop="51dp"
        android:background="#11000000"
        android:drawableLeft="@drawable/ic_action_name_lock"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="Hasło"
        android:textColor="#000"
        android:textSize="16dp"
        android:layout_below="@+id/editText6"
        android:layout_alignStart="@+id/editText6" />

    <android.support.v7.widget.CardView
        android:layout_width="300dp"
        android:layout_height="50dp"
        app:cardBackgroundColor="#d4f5da"
        app:cardCornerRadius="25dp"
        android:layout_marginTop="53dp"
        android:layout_below="@+id/editText7"
        app:cardElevation="20dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/cardView">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="ZALOGUJ"
                android:textColor="#000"
                android:textSize="18sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="300dp"
        android:layout_height="50dp"
        app:cardBackgroundColor="#d4f5da"
        app:cardCornerRadius="25dp"
        android:layout_marginTop="133dp"
        android:layout_below="@+id/editText7"
        app:cardElevation="20dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/cardView2">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="ZAREJESTRUJ"
                android:textColor="#000"
                android:textSize="18sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardView2"
        android:textColor="#000"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:textColorLink="#efe1e1"
        android:text="Zapomniałeś hasła?"
        android:clickable="true"
       />
</RelativeLayout>
