<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.m.aplikacja_screen.Wybor_zadania">

    <LinearLayout
        android:id="@+id/radioGroup"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:background="#f8f5f9"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="Wybór typu zadania: "
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp">

            <RadioButton
                android:id="@+id/dopasowanie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:checked="false"
                android:text="Dopasowanie"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/wybór"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:checked="false"
                android:text="Wybór"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/łączenie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:checked="false"
                android:text="Łączenie"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/plansza_kwadratowa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:checked="false"
                android:text="Plansza kwadratowa"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />


            <RadioButton
                android:id="@+id/tłumaczenie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:checked="false"
                android:text="Tłumaczenie"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/uzupełnianie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:checked="false"
                android:text="Uzupełnianie"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

        </RadioGroup>

        <Button
            android:id="@+id/lekcja"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="35dp"
            android:background="@color/colorAccent"
            android:padding="10dp"
            android:text="Rozpocznij lekcję"
            android:textColor="#fff"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/multiLine"
            android:layout_width="360dp"
            android:layout_height="146dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:ems="10"
            android:background="@drawable/granica"
            android:includeFontPadding="false"
            android:inputType="textMultiLine"
            android:gravity="center"
            android:textSize="15dp"
            android:visibility="gone"
            android:textStyle="bold" >
        </TextView>
    </LinearLayout>
</LinearLayout>
