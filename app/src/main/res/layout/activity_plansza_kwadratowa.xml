<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aplikacja_screen.PlanszaKwadratowa">

    <Button
        android:id="@+id/button10"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:background="#ebfdd4"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="36dp" />

    <Button
        android:id="@+id/button12"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:background="#ebfdd4"
        android:layout_alignTop="@+id/button10"
        android:layout_marginStart="46dp"
        android:layout_toEndOf="@+id/button10" />

    <Button
        android:id="@+id/button13"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:background="#ebfdd4"
        android:layout_alignStart="@+id/button10"
        android:layout_below="@+id/button10"
        android:layout_marginTop="30dp" />

    <Button
        android:id="@+id/button31"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:background="#ebfdd4"
        android:layout_alignStart="@+id/button12"
        android:layout_alignTop="@+id/button13" />

    <Button
        android:id="@+id/button34"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:background="#ebfdd4"
        android:layout_alignEnd="@+id/button13"
        android:layout_below="@+id/button13"
        android:layout_marginTop="30dp" />

    <Button
        android:id="@+id/button35"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:background="#ebfdd4"
        android:layout_alignStart="@+id/button31"
        android:layout_alignTop="@+id/button34" />

    <Button
        android:id="@+id/button36"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:background="#ebfdd4"
        android:layout_alignStart="@+id/button34"
        android:layout_below="@+id/button34"
        android:layout_marginTop="30dp" />

    <Button
        android:id="@+id/button37"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:background="#ebfdd4"
        android:layout_alignEnd="@+id/button35"
        android:layout_alignTop="@+id/button36" />

    <Button
        android:id="@+id/button38"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/pb"
        android:layout_centerHorizontal="true"
        android:background="@drawable/zestawy_screen" />

    <ProgressBar
        android:id="@+id/pb"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="280dp"
        android:layout_height="25dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
