<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aplikacja_screen.Rozsypanka">


    <Button
        android:id="@+id/button15"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editText8"
        android:layout_below="@+id/editText8"
        android:layout_marginTop="31dp"
        android:text=""
        android:background="#e7e2e2"
        android:visibility="invisible" />

    <Button
        android:id="@+id/button16"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button15"
        android:layout_alignBottom="@+id/button15"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="13dp"
        android:text=""
        android:background="#e7e2e2"
        android:visibility="invisible" />

    <Button
        android:id="@+id/button18"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/button15"
        android:layout_below="@+id/button15"
        android:layout_marginTop="19dp"
        android:text=""
        android:background="#e7e2e2"
        android:visibility="invisible" />

    <Button
        android:id="@+id/button19"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button18"
        android:layout_alignBottom="@+id/button18"
        android:layout_alignStart="@+id/button16"
        android:text=""
        android:background="#e7e2e2"
        android:visibility="invisible" />

    <Button
        android:id="@+id/button44"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/button18"
        android:layout_below="@+id/button18"
        android:layout_marginTop="27dp"
        android:text=""
        android:background="#e7e2e2"
        android:visibility="invisible" />

    <Button
        android:id="@+id/button45"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button44"
        android:layout_alignBottom="@+id/button44"
        android:layout_alignStart="@+id/button16"
        android:text=""
        android:background="#e7e2e2"
        android:visibility="invisible" />

    <Button
        android:id="@+id/button46"
        android:layout_width="180dp"
        android:layout_height="35dp"
        android:layout_above="@+id/progressBar3"
        android:layout_centerHorizontal="true"
        android:background="#e7e2e2"
        android:text="Dalej"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/editText8"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button47"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="Ułóż poprawne zdanie z rozsypanki"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/button47"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:clickable="false"
        android:background="#e7e2e2"
        android:text="" />

    <Button
        android:id="@+id/button48"
        android:layout_width="180dp"
        android:layout_height="35dp"
        android:layout_alignEnd="@+id/button49"
        android:layout_below="@+id/button49"
        android:background="#e7e2e2"
        android:text="Sprawdź" />

    <Button
        android:id="@+id/button49"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/button44"
        android:layout_below="@+id/button44"
        android:visibility="invisible"
        android:background="#e7e2e2"
        android:layout_marginTop="27dp" />

    <Button
        android:id="@+id/button50"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/button45"
        android:visibility="invisible"
        android:background="#e7e2e2"
        android:layout_alignTop="@+id/button49" />

    <Button
        android:id="@+id/button51"
        android:layout_width="180dp"
        android:layout_height="35dp"
        android:layout_alignBottom="@+id/button48"
        android:layout_alignStart="@+id/button50"
        android:background="#e7e2e2"
        android:text="Wyczyść" />

    <ProgressBar
        android:id="@+id/progressBar3"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="280dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/button47" />


</RelativeLayout>
